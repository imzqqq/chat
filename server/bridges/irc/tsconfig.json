{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2017",
    "module": "commonjs",
    "allowJs": true,
    "checkJs": false,
    "declaration": false,
    "sourceMap": true,
    "outDir": "./lib",
    "composite": false,
    "strict": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    // TODO: Type errors
    "useUnknownInCatchVariables": false,
    // Until the fix to https://github.com/turt2live/matrix-bot-sdk/issues/155 is released.
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "spec/**/*",
    "scripts/**/*",
    "app.js"
  ]
}

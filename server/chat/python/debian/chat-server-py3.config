#!/bin/sh

set -e

. /usr/share/debconf/confmodule

# try to update the debconf db according to whatever is in the config files
#
# note that we may get run during preconfiguration, in which case the script
# will not yet be installed.
[ -x /opt/venvs/chat-server/lib/manage_debconf.pl ] && \
    /opt/venvs/chat-server/lib/manage_debconf.pl read

db_input high chat-server/server-name || true
db_input high chat-server/report-stats || true
db_go
